{
  "name": "frontdesk-frontend",
  "version": "1.0.0",
  "private": true,
  "description": "FrontDesk Frontend - React Vite + Tailwind + MUI",
  "type": "module",
  "author": "Hitendra Patel",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./src/styles/global.css",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "format": "prettier --write .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^5.16.14",
    "@mui/material": "^5.16.14",
    "@mui/x-data-grid": "^6.20.4",
    "axios": "^1.7.9",
    "file-saver": "^2.0.5",
    "jwt-decode": "^4.0.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.1.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
  "autoprefixer": "^10.4.20",
  "@eslint/js": "^9.14.0",
    "concurrently": "^8.0.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.0",
  "eslint-plugin-react-hooks": "^5.2.0",
  "globals": "^15.12.0",
    "husky": "^8.0.0",
    "jsdom": "^22.1.0",
    "lint-staged": "^14.0.0",
    "msw": "^1.2.1",
    "postcss": "^8.5.1",
    "prettier": "^2.8.8",
    "tailwindcss": "^3.3.3",
    "vite": "^6.0.11",
    "vitest": "^1.2.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{css,scss,md,json,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "endOfLine": "auto"
  }
}
