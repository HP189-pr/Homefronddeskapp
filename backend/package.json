{
  "name": "frontdesk-backend",
  "version": "1.0.0",
  "description": "Backend for FrontDesk App using Node.js, Express, PostgreSQL, and JWT authentication",
  "main": "server.mjs",
  "type": "module",
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node server.mjs",
    "dev": "nodemon server.mjs",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "test": "node --test",
    "migrate": "sequelize db:migrate",
    "seed": "sequelize db:seed:all",
    "backfill:verifications": "node scripts/backfill-verifications-from-receipts.mjs",
    "prepare": "husky install || echo husky skipped",
    "db:align": "node scripts/db-align-constraints.mjs",
    "db:validate": "node scripts/db-validate-and-align.mjs"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "dotenv-safe": "^8.2.0",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^3.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.17.2",
    "pg": "^8.10.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.32.1",
    "sequelize-cli": "^6.6.0"
  },
  "devDependencies": {
    "eslint": "^8.39.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0",
    "nodemon": "^3.0.2",
    "prettier": "^2.8.8"
  },
  "lint-staged": {
    "*.{js,mjs}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
